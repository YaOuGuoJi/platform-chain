<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bester.platform.platformchain.dao.BlackGoldCardDao">
    <resultMap id="blackGoldCardEntity" type="com.bester.platform.platformchain.entity.BlackGoldCardEntity">
        <result column="Id" property="id"/>
        <result column="CardId" property="cardId"/>
        <result column="Password" property="password"/>
        <result column="Status" property="status"/>
        <result column="UserId" property="userId"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
        Id,
        CardId,
        Password,
        Status,
        UserId,
        AddTime,
        UpdateTime
    </sql>

    <insert id="addBlackGoldCards" parameterType="map">
        INSERT INTO black_gold_card
        (
            CardId,
            Password,
            Status,
            UserId,
            AddTime,
            UpdateTime
        ) VALUES
        <foreach collection="entities" index="index" item="entity" separator=",">
        (
            #{entity.cardId},
            #{entity.password},
            '0',
            '0',
            NOW(),
            NOW()
        )
        </foreach>
    </insert>

    <select id="findCardByCardId" parameterType="map" resultMap="blackGoldCardEntity">
        SELECT
        <include refid="allFields"/>
        FROM black_gold_card
        WHERE CardId = #{cardId}
    </select>

    <update id="bindCard2User" parameterType="map">
        UPDATE black_gold_card
        SET
        Status=1,
        UserId=#{userId},
        UpdateTime=NOW()
        WHERE CardId=#{cardId}
    </update>

    <select id="findCardInfoByUserId" parameterType="map" resultMap="blackGoldCardEntity">
        SELECT
        <include refid="allFields"/>
        FROM black_gold_card
        WHERE UserId = #{userId}
    </select>

</mapper>
