<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bester.platform.platformchain.dao.PowerRecordDao">
    <resultMap id="powerEntity" type="com.bester.platform.platformchain.entity.PowerEntity">
        <result column="id" property="id"/>
        <result column="UserId" property="userId"/>
        <result column="Source" property="source"/>
        <result column="Power" property="power"/>
        <result column="isTemporary" property="temporary"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
        id,
        UserId,
        Source,
        Power,
        isTemporary,
        AddTime,
        UpdateTime
    </sql>

    <select id="selectUserValidPower" parameterType="map" resultMap="powerEntity">
        SELECT
        <include refid="allFields"/>
        FROM power_record
        WHERE UserId = #{userId}
        AND (isTemporary = 0 OR AddTime &gt; #{time})
    </select>

    <select id="selectUserExpiredPower" parameterType="map" resultMap="powerEntity">
        SELECT
        <include refid="allFields"/>
        FROM power_record
        WHERE UserId = #{userId}
        AND isTemporary = 1 AND AddTime &lt;= #{time}
    </select>

    <select id="getUserValidTemporaryPower" resultType="int">
    <![CDATA[
        SELECT
        SUM(pr.Power)
        FROM power_record pr
        WHERE UserId = #{userId}
        AND pr.isTemporary = 1
        AND pr.AddTime <= #{expirationDate}
    ]]>
    </select>

    <select id="getUserForeverPower" resultType="int">
        SELECT
        SUM(pr.Power)
        FROM power_record pr
        WHERE UserId = #{userId}
        AND pr.isTemporary = 0
    </select>

</mapper>
