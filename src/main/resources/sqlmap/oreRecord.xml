<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bester.platform.platformchain.dao.OreRecordDao">
    <resultMap id="oreRecordEntity" type="com.bester.platform.platformchain.entity.OreRecordEntity">
        <result column="id" property="id"/>
        <result column="UserId" property="userId"/>
        <result column="Source" property="source"/>
        <result column="Ore" property="ore"/>
        <result column="status" property="status"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
        id,
        UserId,
        Source,
        Ore,
        status,
        AddTime,
        UpdateTime
    </sql>
    <select id="showOreByUserId" parameterType="java.lang.Integer" resultMap="powerEntity">
        select
        <include refid="allFields"/>
        from ore_record
        where UserId=#{userId} and status=2
    </select>

    <select id="showOreById" parameterType="java.lang.Integer" resultMap="powerEntity">
        select <include refid="allFields"/>
        from ore_record
        where id=#{id}
    </select>

    <update id="receiveOre" parameterType="java.lang.Integer">
          update ore_record
          set status=1,UpdateTime=now()
          where id=#{id} and UserId=#{userId} and status=2
    </update>

    <insert id="insertUserOreByHour">
        INSERT INTO
        ore_record (UserId, Source, Ore, AddTime, UpdateTime, status)
        VALUES (#{userId}, #{source}, #{ore}, NOW(), NOW(), #{status})
    </insert>

    <select id="findGrowingOreByEveryday" resultType="java.lang.Integer">
        SELECT
        COUNT(ore.id)
        FROM ore_record ore
        WHERE ore.status = #{status}
        AND ore.UserId = #{userId}
    </select>

</mapper>
