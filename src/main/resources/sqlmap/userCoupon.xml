<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bester.platform.platformchain.dao.UserCouponDao">
    <resultMap id="userCouponEntity" type="com.bester.platform.platformchain.entity.UserCouponEntity">
        <result column="Id" property="id"/>
        <result column="UserId" property="userId"/>
        <result column="ShopId" property="shopId"/>
        <result column="CouponId" property="couponId"/>
        <result column="FailureTime" property="failureTime"/>
        <result column="Status" property="status"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
      Id,
      UserId,
      ShopId,
      CouponId,
      FailureTime,
      Status,
      AddTime,
      UpdateTime
    </sql>
    <insert id="receiveCoupon" parameterType="com.bester.platform.platformchain.entity.UserCouponEntity"
            useGeneratedKeys="true" keyProperty="userCoupon.id">
        insert into user_coupon
        (UserId,CouponId,FailureTime,Status,AddTime,UpdateTime)values
        (#{userCoupon.userId},#{userCoupon.couponId},#{userCoupon.failureTime},#{userCoupon.status},now(),now())
    </insert>
    <select id="findCouponCountById" resultType="int">
        select count(Id)
        from user_coupon
        where UserId=#{userId} and CouponId=#{couponId}
    </select>
    <select id="findUnusedAndUsedCoupon" resultType="com.bester.platform.platformchain.entity.UserCouponEntity">
        SELECT
        <include refid="allFields"></include>
        FROM user_coupon
        WHERE UserId = #{userId}
        AND Status = #{status}
    </select>

    <select id="findExpiredCoupon" resultType="com.bester.platform.platformchain.entity.UserCouponEntity">
        <![CDATA[
        SELECT
        CouponId,AddTime,FailureTime
        FROM user_coupon
        WHERE UserId = #{userId}
        AND NOW() > FailureTime
            ]]>
    </select>

</mapper>
