<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bester.platform.platformchain.dao.BusinessInfoDao">
    <resultMap id="businessInfoEntity" type="com.bester.platform.platformchain.entity.BusinessInfoEntity">
        <result column="id" property="id"/>
        <result column="register_phone" property="registerPhone"/>
        <result column="business_name" property="businessName"/>
        <result column="phone" property="phone"/>
        <result column="weChat" property="weChat"/>
        <result column="introduce" property="introduce"/>
        <result column="business_type" property="businessType"/>
        <result column="remarks" property="remarks"/>
        <result column="addTime" property="addTime"/>
        <result column="updateTime" property="updateTime"/>
    </resultMap>
    <sql id="allFields">
        register_phone,
        business_name,
        phone,
        weChat,
        introduce,
        business_type,
        remarks,
        addTime,
        updateTime
    </sql>

    <insert id="insertBusinessInfo" parameterType="com.bester.platform.platformchain.entity.UserInfoEntity">
        INSERT INTO
        business_info
        (<include refid="allFields"/>)
        VALUES (
        #{businessInfo.registerPhone},
        #{businessInfo.businessName},
        #{businessInfo.phone},
        #{businessInfo.weChat},
        #{businessInfo.introduce},
        #{businessInfo.businessType},
        #{businessInfo.remarks},
        NOW(),
        NOW()
        )
    </insert>


</mapper>
