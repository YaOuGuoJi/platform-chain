<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bester.platform.platformchain.dao.PowerRecordDao">
    <resultMap id="powerEntity" type="com.bester.platform.platformchain.entity.PowerEntity">
        <result column="id" property="id"/>
        <result column="UserId" property="userId"/>
        <result column="Source" property="source"/>
        <result column="Power" property="power"/>
        <result column="isTemporary" property="temporary"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
        id,
        UserId,
        Source,
        Power,
        isTemporary,
        AddTime,
        UpdateTime
    </sql>
    
    <select id="selectForeverPower" resultType="integer">
        SELECT SUM(Power) 
        from power_record
        WHERE isTemporary = 0
    </select>
    
    <select id="selectTemporaryPower" resultType="integer">
        select SUM(Power)
        from power_record
        where isTemporary = 1 AND 90 >= datediff(NOW(),AddTime)
    </select>


</mapper>
