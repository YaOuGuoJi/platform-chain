<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bester.platform.platformchain.dao.UserAccountDao">

    <resultMap id="userAccountEntity" type="com.bester.platform.platformchain.entity.UserAccountEntity">
        <result column="UserId" property="userId"/>
        <result column="UserName" property="userName"/>
        <result column="Password" property="password"/>
        <result column="InviteCode" property="inviteCode"/>
        <result column="InviteTimes" property="inviteTimes"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
        UserId,
        UserName,
        Password,
        InviteCode,
        InviteTimes,
        AddTime,
        UpdateTime
    </sql>

    <select id="findUserAccountInfoByUserId" parameterType="map" resultMap="userAccountEntity">
        SELECT
        <include refid="allFields"/>
        FROM user_account
        WHERE UserId = #{userId}
    </select>

    <select id="findUserAccountInfoByUserName" parameterType="string" resultType="com.bester.platform.platformchain.entity.UserAccountEntity">
        SELECT
        <include refid="allFields"/>
        FROM user_account
        WHERE UserName = #{userName}
    </select>

    <insert id="insertUserAccountInfo" parameterType="com.bester.platform.platformchain.entity.UserAccountEntity">
        INSERT INTO user_account
        (
            UserId,
            UserName,
            Password,
            InviteCode,
            InviteTimes,
            AddTime,
            UpdateTime
        )
        VALUES
        (
            #{userAccountEntity.userId},
            #{userAccountEntity.userName},
            #{userAccountEntity.password},
            #{userAccountEntity.inviteCode},
            0,
            NOW(),
            NOW()
        )
    </insert>

    <select id="selectByInviteCode" parameterType="map" resultMap="userAccountEntity">
        SELECT
        <include refid="allFields"/>
        FROM user_account
        WHERE InviteCode = #{inviteCode}
    </select>

    <update id="addUserInviteTimes" parameterType="map">
        UPDATE user_account
        SET InviteTimes = InviteTimes + 1
        WHERE UserId = #{userId}
    </update>

    <select id="selectByUserId" parameterType="map" resultMap="userAccountEntity">
        SELECT
        <include refid="allFields"/>
        FROM user_account
        WHERE UserId = #{userId}
    </select>

</mapper>
