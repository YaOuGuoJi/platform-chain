<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bester.platform.platformchain.dao.CouponDao">
    <resultMap id="couponEntity" type="com.bester.platform.platformchain.entity.CouponEntity">
        <result column="Id" property="id"/>
        <result column="CouponName" property="couponName"/>
        <result column="Margin" property="margin"/>
        <result column="CouponType" property="couponType"/>
        <result column="OfferDiscount" property="offerDiscount"/>
        <result column="OfferCash" property="offerCash"/>
        <result column="Threshold" property="threshold"/>
        <result column="VipLevel" property="vipLevel"/>
        <result column="LimitNum" property="limitNum"/>
        <result column="ValidityPeriod" property="validityPeriod"/>
        <result column="Available" property="available"/>
        <result column="Description" property="description"/>
        <result column="AddTime" property="addTime"/>
        <result column="UpdateTime" property="updateTime"/>
    </resultMap>

    <sql id="allFields">
      Id,
      CouponName,
      Margin,
      CouponType,
      OfferDiscount,
      OfferCash,
      Threshold,
      VipLevel,
      LimitNum,
      ValidityPeriod,
      Available,
      Description,
      AddTime,
      UpdateTime
    </sql>

    <select id="inquireCouponById" resultMap="couponEntity">
        SELECT
        <include refid="allFields"/>
        FROM coupon
        WHERE Id = #{id}
    </select>


    <insert id="addCoupon" parameterType="map">
        INSERT INTO coupon
        <trim prefix="(" suffix=")" suffixOverrides=",">
            CouponName,
            Margin,
            CouponType,
            <if test="coupon.offerDiscount != null and coupon.offerDiscount != ''">
                OfferDiscount,
            </if>
            <if test="coupon.offerCash != null and coupon.offerCash != ''">
                OfferCash,
            </if>
            Threshold,
            VipLevel,
            LimitNum,
            ValidityPeriod,
            Available,
            Description,
            AddTime
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            #{coupon.couponName},
            #{coupon.margin},
            #{coupon.couponType},
            <if test="coupon.offerDiscount != null and coupon.offerDiscount != ''">
                #{coupon.offerDiscount},
            </if>
            <if test="coupon.OfferCash != null and coupon.offerCash !=''">
                #{coupon.offerCash},
            </if>
            #{coupon.threshold},
            #{coupon.vipLevel},
            #{coupon.limitNum},
            #{coupon.validityPeriod},
            #{coupon.available},
            #{coupon.description},
            NOW()
        </trim>
    </insert>


</mapper>
